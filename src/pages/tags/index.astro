---
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle = "Tab Index";

const allPosts = await Astro.glob('../posts/*.md');

const uniqueTags = [...new Set(allPosts.map(post => post.frontmatter.tags).flat())];
---
<BaseLayout pageTitle={pageTitle}>
    <h2>This page contains tags</h2>
    <ul class="tags">
        {uniqueTags.map(tag => <p><a href={`/tags/${tag}`}>{tag}</a></p>)}
    </ul>
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>